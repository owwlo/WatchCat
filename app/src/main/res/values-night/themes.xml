<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Top level DayNight theme to be used in AndroidManifest.xml-->
    <style name="Theme.owwlo" parent="Base.Theme.owwlo">
        <!--Material color attributes (dark theme) -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant_dark</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="android:colorBackground">@color/surface_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorError">@color/error_dark</item>
        <item name="colorOnPrimary">@color/secondary_surface</item>
        <item name="colorOnSecondary">@color/secondary_surface</item>
        <item name="colorOnBackground">@color/surface_light</item>
        <item name="colorOnSurface">@color/surface_light</item>
        <item name="colorOnError">@color/secondary_surface</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item>
        <!--   a secondary color for controls like checkboxes and text fields -->
        <item name="colorAccent">@color/accent_dark</item>
    </style>
</resources>
